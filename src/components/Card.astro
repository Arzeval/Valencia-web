---
const {Title, Description, Image, Hastags, AltImage } = Astro.props;
---

<div class="max-w-sm rounded overflow-hidden shadow-lg">
	<img class="w-full max-h-52" src={Image} alt={AltImage}>
	<div class="px-6 py-4">
	  <div class="text-black font-bold text-xl mb-2">{Title}</div>
	  <p class="text-gray-700 text-base">
		{Description}
	  </p>
	</div>
	<div class="px-6 pt-4 pb-2">
		{Hastags && Hastags.map(function(hastag) {
			
			return <span class="inline-block bg-gray-200 rounded-full px-3 py-1 text-sm font-semibold text-gray-700 mr-2 mb-2">#{hastag}</span>
		
		})}
	
	</div>
  </div>